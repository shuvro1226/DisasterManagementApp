<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.gov.dmrd.disastermanagement.TestFragment2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ministry_formation"
            android:gravity="center_horizontal"
            android:textColor="@color/font_half_white"
            android:padding="20dp"
            android:background="@color/light_red"
            android:textSize="18dp"/>

        <LinearLayout
            android:id="@+id/ministry_structure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/layout_bg">

            </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/vision"
            android:gravity="center_horizontal"
            android:textColor="@color/font_half_white"
            android:padding="20dp"
            android:background="@color/light_red"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vision_details"
            android:layout_margin="20dp"
            android:textSize="14dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mission"
            android:gravity="center_horizontal"
            android:textColor="@color/font_half_white"
            android:padding="20dp"
            android:background="@color/light_red"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mission_details"
            android:layout_margin="20dp"
            android:textSize="14dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/other_about"
            android:gravity="center_horizontal"
            android:textColor="@color/font_half_white"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/light_red"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pdf_icon"
                android:background="@drawable/textview_bg">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/organization_structure"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/text_color"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pdf_icon"
                android:background="@drawable/textview_bg">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/budget"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:paddingLeft="20dp"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pdf_icon"
                android:background="@drawable/textview_bg">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/citizen_charter"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:paddingLeft="20dp"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pdf_icon"
                android:background="@drawable/textview_bg">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/work_division"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:paddingLeft="20dp"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:background="@drawable/layout_bg">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pdf_icon"
                android:background="@drawable/textview_bg">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/planning"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:paddingLeft="20dp"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>